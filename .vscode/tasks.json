{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: build Debug",
            "type": "shell",
