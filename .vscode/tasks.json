{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo build",
            "type": "process",
            "command": "cargo",
            "args": ["build"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$rustc"],
            "detail": "Build the WinMine executable using Cargo."
        },
        {
            "label": "cargo build --release",
            "type": "process",
            "command": "cargo",
            "args": ["build", "--release"],
            "group": "build",
            "problemMatcher": ["$rustc"],
            "detail": "Build an optimized WinMine executable."
        }
    ]
}
